<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/material_deep_teal_500">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Complete Your Profile..."
        android:id="@+id/textView7"
        android:layout_weight="0.09"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/cross"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/submit"
        android:background="@drawable/fablogin"
        android:textStyle="bold"
        android:typeface="serif"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:id="@+id/radio_Group"
        android:layout_below="@+id/category_chooser"
        android:layout_alignEnd="@+id/category_chooser"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <RadioButton
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:text="@string/outhouse"
            android:id="@+id/Out_House"
            android:checked="false"
            android:textColor="#FFFF"
            android:textColorHint="#FFFF"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/inshouse"
            android:id="@+id/in_house"
            android:checked="false"
            android:layout_alignTop="@+id/category_chooser"
            android:layout_alignEnd="@+id/category_chooser"
            android:textColor="#FFFF"
            android:textColorHint="#FFFF"/>

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Employed From"
        android:id="@+id/textView6"
        android:textColor="#FFFF"
        android:textColorHint="#FFFF"
        android:layout_alignTop="@+id/radio_Group"
        android:layout_alignStart="@+id/category_chooser"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="left|center_vertical" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/category_chooser"
        android:hint="Selecet Category"
        android:inputType="none"
        android:textIsSelectable="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp"
        android:textColor="#FFFF"
        android:textColorHint="#FFFF"
        android:layout_gravity="center_horizontal|top"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/cross"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/cross"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"/>

</RelativeLayout>